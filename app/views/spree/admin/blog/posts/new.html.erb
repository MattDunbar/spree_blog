<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @blog_post } %>

<%= form_for [:admin, @blog_post], method: :post, url: admin_blog_posts_path, :html => { :multipart => true } do |f| %>

    <fieldset data-hook="new_blog_post">

      <legend align="center"><%= Spree.t(:new_blog_post) %></legend>

      <%= f.field_container :title do %>
          <%= f.label :title, Spree.t(:title) %> <span class="required">*</span><br />
          <%= f.text_field :title, :class => 'fullwidth title' %>
          <%= f.error_message_on :title %>
      <% end %>

      <%= render :partial => 'spree/admin/shared/new_resource_links' %>

    </fieldset>
<% end %>