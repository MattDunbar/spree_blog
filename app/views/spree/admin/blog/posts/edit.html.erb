<% content_for :page_actions do %>
    <li><%= button_link_to Spree.t(:back_to_blog_posts_list), session[:return_to] || admin_blog_posts_url, :icon => 'arrow-left' %></li>
    <% if can?(:create, Spree::Blog::Post) %>
        <li id="new_product_link">
          <%= button_link_to Spree.t(:new_blog_post), new_object_url, { :icon => 'plus', :id => 'admin_new_blog_post' } %>
        </li>
    <% end %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @product } %>

<%= form_for [:admin, @post], :method => :put, :html => { :multipart => true } do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
<% end %>
