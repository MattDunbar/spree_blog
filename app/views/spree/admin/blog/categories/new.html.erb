<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @blog_category } %>

<%= form_for [:admin, @blog_category], method: :post, url: admin_blog_categories_path, :html => { :multipart => true } do |f| %>

    <fieldset data-hook="new_blog_category">

      <legend align="center"><%= Spree.t(:new_blog_category) %></legend>

      <%= f.field_container :name do %>
          <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
          <%= f.text_field :name, :class => 'fullwidth title' %>
          <%= f.error_message_on :name %>
      <% end %>

      <%= render :partial => 'spree/admin/shared/new_resource_links' %>

    </fieldset>
<% end %>